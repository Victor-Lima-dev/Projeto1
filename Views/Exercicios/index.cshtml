@model ResolverQuestao.Models.ViewModels.IndexExerciciosViewModel



<div class="container">

    <h1 class="title text-center"> Exercicios</h1>

    @* Criar *@
    <div class="form-pesquisa">
        <a asp-action="Create" class="btn btn-primary criar-exercicio">Criar Exercicio</a>
        <div class="col-auto form-pesquisa-input">
            <label class="visually-hidden" for="autoSizingInputGroup">Procurar por Titulo ou Tipo</label>
            <div class="input-group">
                <div class="input-group-text"><a href="#"><i class="fa-solid fa-magnifying-glass"></i></a></div>
                <select class="form-control" id="tipo" name="tipo" onchange="window.location.href=this.value">
                    <option value="">Procurar por Tipo</option>
                    @foreach (var tipo in Model.Tipos.Distinct())
                    {
                        <option value="@Url.Action("ProcurarPorTipo", "Exercicios", new {tipo = tipo})"> @tipo
                        </option>
                    }
                </select>
            </div>
        </div>
    </div>

<div class="listaItens-box">
    @foreach (var item in Model.Exercicios)
    {
        <div class="listaItens">

            <p>@item.Titulo</p>
            
            <p class="enunciado">@item.Enunciado</p>
            <p class="listaItensTipo">@item.Tipo</p>

            <div class="listaItensIcones-Box">
                <a asp-action="ResponderSequencia" asp-route-id="@item.ExercicioId"><i
                        class="fa-solid fa-fire-flame-curved listaItensIcones listaItensIcones"></i></a>
                <a asp-action="Edit" asp-route-id="@item.ExercicioId"><i
                        class="fa-solid fa-pen-to-square listaItensIcones"></i></a>
                <a asp-action="Details" asp-route-id="@item.ExercicioId"><i
                        class="fa-solid fa-expand listaItensIcones"></i></a>
                <a asp-action="Delete" asp-route-id="@item.ExercicioId"><i
                        class="fa-solid fa-trash-can listaItensIcones"></i></a>

            </div>
        </div>
    }

</div>

</div>