@model Exercicio

<div class = "container" >
<div class="card">
    <h5 class="card-header">@Model.Titulo</h5>
    <div class="card-body">
        <h5 class="card-title">Enunciado</h5>
        <p class="card-text">@Model.Enunciado</p>

        @if (Model.Explicacao != null)
        {
            <h5 class="card-title">Explicação</h5>
            <p class="card-text">@Model.Explicacao</p>
        }

        @if (Model.MaterialSuporte != null)
        {
            <h5 class="card-title">Material de Suporte</h5>
            <p class="card-text">@Model.MaterialSuporte</p>
        }
        <div>
            <div class="details-container">
                <div>
                    <a asp-action="ResolverQuestao" asp-route-id="@Model.ExercicioId"
                        class="btn btn-primary">Responder</a>
                </div>

                <div class="icones-container-icones">
                    <a asp-action="Edit" asp-route-id="@Model.ExercicioId"><i class="fa-solid fa-pen-to-square"></i></a>
                    <a asp-action="Details" asp-route-id="@Model.ExercicioId"><i class="fa-solid fa-expand"></i></a>
                    <a asp-action="Delete" asp-route-id="@Model.ExercicioId"><i class="fa-solid fa-trash-can"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
</div>