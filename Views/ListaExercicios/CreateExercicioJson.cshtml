@model Exercicio

@{
    var textoBase = ViewBag.TextoBase;
}
<div class="">
<form asp-action="GPT" asp-controller="ListaExercicios" method="post">

    <div class="assistente">



    <h1 class="text-center"> <i class="fa-solid fa-robot"></i> Criar o Exercicio com GPT </h1>


    <div class="form-group">
        <h4 for="materia">Materia</h4>
        <input name="materia" type="text" class="form-control" id="materia" />
    </div>

    <div class="form-group">
        <h4 for="tipo">Tipo</h4>
        <input name="tipo" type="text" class="form-control" id="tipo" />
    </div>

  
        <h4 for="textoBase">Texto Base</h4>
        <textarea name="textoBase" type="text" class="form-control" id="textoBase">
    </textarea>

        <button type="submit" class=" botaoAssistente">Gerar e Adicionar o Exercicio</button>
   
    </div>

</form>
    </div>

@if (Model == null)
{
    <h1>Modelo nulo</h1>
}
else
{

    <h1 class="text-center">@Model.Titulo</h1>
    <p>@Model.Enunciado</p>

    <div class="form-group">
        @foreach (var item in Model.Alternativas)
        {
            <div class="form-check">
                <input class="form-check-input" type="radio" name="resposta" id="@item.AlternativaId" value="@item.Texto"
                    checked>
                <label class="form-check-label" for="@item.AlternativaId">
                    @item.Texto
                </label>
            </div>
        }
    </div>

    <div class="form-group">
        <p>Resposta Correta: @Model.Resposta</p>
    </div>

    <div class="form-group">
        <p>Explicação: @Model.Explicacao</p>
    </div>

}
