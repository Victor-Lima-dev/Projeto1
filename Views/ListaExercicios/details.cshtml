@model ListaExercicio


<div class="card">
    <h5 class="card-header">@Model.Titulo</h5>
    <div class="card-body">
        <h5 class="card-title">Descrição da Lista</h5>
        <p class="card-text">@Model.Descricao</p>

        @if (Model.MaterialSuporte != null)
        {
            <h5 class="card-title">Material de Suporte</h5>
            <p class="card-text">@Model.MaterialSuporte</p>
        }

         @foreach (var item in Model.TopicoListas)
            {
            <h5 class="card-title">@item.Titulo</h5>
            <p class="card-text">@item.Conteudo</p>
            }

        <div>
            @foreach (var item in Model.Exercicios)
            {
                <ul class="list-group">
                    <li class="list-group-item">@item.Titulo</li>
                </ul>
            }
        </div>

        <div class="details-container">
            <div>
                <a asp-action="ResponderLista" asp-route-id="@Model.ListaExercicioId" class="btn btn-primary">Responder</a>
            </div>
            <div class="icones-container-icones">
                <a asp-action="Edit" asp-route-id="@Model.ListaExercicioId"><i
                        class="fa-solid fa-pen-to-square"></i></a>
                <a asp-action="Details" asp-route-id="@Model.ListaExercicioId"><i class="fa-solid fa-expand"></i></a>
                <a asp-action="Delete" asp-route-id="@Model.ListaExercicioId"><i class="fa-solid fa-trash-can"></i></a>
                <a asp-action="ResponderSequencia" asp-route-id="@Model.ListaExercicioId"><i class="fa-solid fa-arrow-right"></i></a>

            </div>

        </div>

      


        


    </div>
</div>